{
  "name": "@salesforce/kit",
  "version": "0.4.0",
  "description": "Commonly needed utilities for TypeScript and JavaScript",
  "main": "lib/index.js",
  "repository": "https://git.soma.salesforce.com/salesforcedx/sfdx-kit",
  "author": "Salesforce",
  "license": "BSD-3-Clause",
  "types": "lib/index.d.ts",
  "files": [
    "docs",
    "lib/**/*.js",
    "!lib/**/*.test.js",
    "lib/**/*.d.ts",
    "!lib/**/*.test.d.ts"
  ],
  "scripts": {
    "_typedoc": "node_modules/.bin/typedoc",
    "build": "yarn compile && yarn lint",
    "clean": "rm -rf lib docs *xunit.xml *checkstyle.xml *unitcoverage yarn.lock package-lock.json yarn-error.log docs",
    "clean-all": "rm -rf node_modules && yarn clean",
    "copy-lodash": "mkdir -p lib/nodash && cp vendor/lodash.min.js lib/nodash/lodash.js",
    "compile": "yarn copy-lodash && ./node_modules/.bin/tsc -p tsconfig.json && cp -r src/nodash/*.d.ts lib/nodash",
    "docs": "yarn docs-html && yarn docs-md",
    "docs-html": "yarn _typedoc --out docs/html",
    "docs-md": "yarn _typedoc --out docs/md --theme markdown",
    "lint": "node_modules/.bin/tslint -p tsconfig.json",
    "lint-report": "yarn lint -t checkstyle -o checkstyle.xml",
    "lodash": "./scripts/build-lodash.sh",
    "prepare": "yarn build && yarn docs",
    "rebuild": "yarn clean-all && yarn install --no-lockfile && yarn build",
    "test": "yarn build && yarn uts",
    "test-with-coverage": "yarn compile && yarn lint-report && scripts/unit-test-with-coverage.js",
    "uts": "node_modules/.bin/mocha --require source-map-support/register --recursive \"lib/**/*.test.js\"",
    "watch": "node_modules/.bin/tsc -w -p tsconfig.json"
  },
  "dependencies": {
    "@salesforce/ts-types": "0.11.0"
  },
  "devDependencies": {
    "@salesforce/dev-config": "1.1.3",
    "@types/chai": "4.1.3",
    "@types/mocha": "5.2.0",
    "@types/node": "10.0.6",
    "@types/sinon": "4.3.2",
    "chai": "4.1.2",
    "istanbul": "1.0.0-alpha.2",
    "lodash-cli": "4.17.5",
    "mocha": "5.1.1",
    "shelljs": "0.8.2",
    "sinon": "5.0.7",
    "source-map-support": "0.5.6",
    "tslint": "5.11.0",
    "typedoc": "0.12.0",
    "typedoc-plugin-external-module-name": "1.1.3",
    "typedoc-plugin-markdown": "1.1.15",
    "typescript": "3.0.3",
    "xunit-file": "1.0.0"
  }
}
